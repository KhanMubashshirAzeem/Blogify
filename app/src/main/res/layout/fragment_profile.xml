<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:backgroundTint="@color/gray"
    tools:context=".fragment.ProfileFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24sp"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="12dp"
            android:padding="4dp"
            android:src="@drawable/person_icon"
            app:civ_border_color="@color/dark_gray"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="12sp"
            android:hint="Update username"
            android:padding="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/person_icon"
            app:drawableTint="@color/black" />

        <View
            android:layout_width="180dp"
            android:layout_height="1.5dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Update your email"
            android:padding="8dp"
            android:drawablePadding="12sp"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/email_icon" />

        <TextView
            android:id="@+id/savedBlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:drawableStart="@drawable/file_icon"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Saved Blogs"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/logout_icon"
            android:drawableTint="@color/black"
            android:drawablePadding="8dp"
            />

    </LinearLayout>


</LinearLayout>
