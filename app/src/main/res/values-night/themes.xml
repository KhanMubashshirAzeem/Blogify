<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Skills_plus.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorSurface">@color/offBlack2</item>
        <item name="colorOnSurface">@color/white</item>
<!--        <item name="colorBackground">@color/backgroundDark</item>-->
        <item name="colorOnBackground">@color/white</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


</resources>
